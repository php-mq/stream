{
  "name": "php-mq/stream",
  "description": "PHPMQ Stream",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "Holger Woltersdorf",
      "email": "hw@hollo.me"
    }
  ],
  "require": {
    "php": ">=7.1"
  },
  "autoload": {
    "psr-4": {
      "PHPMQ\\Stream\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PHPMQ\\Stream\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "tm/tooly-composer-script": "^1.0"
  },
  "scripts": {
    "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
    "post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
  },
  "extra": {
    "tools": {
      "phpunit": {
        "url": "https://phar.phpunit.de/phpunit-6.5.5.phar",
        "only-dev": true
      },
      "coveralls": {
        "url": "https://github.com/satooshi/php-coveralls/releases/download/v2.0.0/php-coveralls.phar",
        "only-dev": true
      },
      "phpmetrics": {
        "url": "https://github.com/phpmetrics/PhpMetrics/releases/download/v2.3.2/phpmetrics.phar",
        "only-dev": true
      }
    }
  }
}
